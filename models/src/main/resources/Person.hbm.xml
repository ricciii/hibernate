<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.ecc.app.Person" table="people">
<meta attribute="class-description">
This class contains the employee detail.
</meta>
<id name="id" type="int" column="id">
	<generator class="native"/>
</id>
<component name="name" class="com.ecc.app.Name">
	<property name="lastName" column="last_name" type="string"/>
	<property name="firstName" column="first_name" type="string"/>
	<property name="middleName" column="middle_name" type="string"/>
	<property name="suffix" column="suffix" type="string"/>
</component>
<component name="address" class="com.ecc.app.Address">
	<property name="street" column="street" type="string"/>
	<property name="barangay" column="barangay" type="string"/>
	<property name="municipality" column="municipality" type="string"/>
	<property name="zipCode" column="zip_code" type="string"/>
</component>
<set name = "contactInfo" cascade="all">
    <key column = "person_id"/>
    <one-to-many class="com.ecc.app.ContactInfo"/>
</set>
<set name = "roles" cascade="all">
    <key column = "person_id"/>
    <many-to-many class="com.ecc.app.Role"/>
</set>
<property name="dateOfBirth" column="date_of_birth" type="calendar_date"/>
<property name="gwa" column="gwa" type="float"/>
<property name="dateHired" column="date_hired" type="calendar_date"/>
<property name="currentlyEmployed" column="currently_employed" type="boolean"/>
</class>

<class name="com.ecc.app.ContactInfo" table="contact_information">
<id name="id" type="int" column="id">
<generator class="native"/>
</id>
<property name="contactInfo" column="contact_info" type="string"/>
<property name="type" column="type" type="string"/>
</class>

<class name="com.ecc.app.Role" table="roles">
<id name="id" type="int" column="id">
<generator class="native"/>
</id>
<property name="role" column="role" type="string"/>
</class>
</hibernate-mapping>